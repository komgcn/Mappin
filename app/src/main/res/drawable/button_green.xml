<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <layer-list>
            <item android:left="5dp" android:top="5dp">
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="@color/grey" />
                </shape>
            </item>
            <item android:bottom="2dp" android:right="2dp">
                <shape>
                    <solid
                        android:color="@color/light_green" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/dark_green" />
                    <corners
                        android:radius="6dp" />
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:left="5dp" android:top="5dp">
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="@color/grey" />
                </shape>
            </item>
            <item android:bottom="2dp" android:right="2dp">
                <shape>
                    <gradient
                        android:startColor="@color/light_green"
                        android:endColor="@color/dark_green"
                        android:angle="270" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/dark_green" />
                    <corners
                        android:radius="6dp" />
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>